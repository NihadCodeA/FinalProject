@model ProductViewModel
@{
    int count = 0;
}
<main>
    <div class="mt-4">
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-12">
                    <!-- breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="me-2"><a asp-controller="home" asp-action="index">Home </a></li>
                            <li class="me-2"><i class="bi bi-chevron-right"></i></li>
                            <li class="me-2"><a asp-controller="store" asp-action="storelist">Stores</a></li>
                            <li class="me-2"><i class="bi bi-chevron-right"></i></li>
                            <li class="active" aria-current="page">
                                @ViewData["StoreName"]
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- section -->
    <section class="mb-lg-14 mb-8 mt-8">
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-12 col-lg-3 col-md-4 mb-4 mb-md-0">
                    <div class="d-flex flex-column">
                        <div>
                            <!-- img -->
                            <!-- img -->
                            <img src="~/assets/images/stores-logo/stores-logo-1.svg"
                                 alt=""
                                 class="rounded-circle icon-shape icon-xxl" />
                        </div>
                        <!-- heading -->
                        <div class="mt-4">
                            <h1 class="mb-1 h4">@Model?.Store?.StoreName</h1>
                            <div class="small text-muted">
                                <span>Everyday store prices </span>
                            </div>
                            <div>
                                <span>
                                    <small><a href="#!">100% satisfaction guarantee</a></small>
                                </span>
                            </div>
                            <!-- rating -->
                            <div class="mt-2">
                                <!-- rating -->
                                <small class="text-warning">
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-half"></i>
                                </small><span class="ms-2">5.0</span>
                                <!-- text --><span class="text-muted ms-1">(3,400 reviews)</span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <!-- nav -->
                    <ul class="nav flex-column nav-pills nav-pills-dark">
                        <!-- nav item -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="store" asp-action="index" asp-route-storeId="@Model?.Store?.Id" asp-route-page="1"><i class="feather-icon icon-shopping-bag me-2"></i>Shop</a>
                        </li>
                        <!-- nav item -->
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Store") && User.Identity.Name == (Model.Store.Email ?? ""))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="product" asp-action="addproduct"><i class="feather-icon icon-plus me-2"></i>Add product</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-controller="product" asp-action="index"><i class="feather-icon icon-list me-2"></i>Products list</a>
                            </li>
                       }
                        <!-- nav item -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="store" asp-action="info" asp-route-id="@Model.Store.Id"><i class="bi bi-info-circle me-2"></i>Info</a>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-lg-9 col-md-8">
                    
                    <!--========================PRODUCT TABLE START================================-->
                    <div class="row">
                        <div class="">
                             <div class="py-3 p-md-3">
                                <!-- heading -->
                                <h3 class="mb-4">Products</h3>
                                <div class="table-responsive border-0">
                                   <!-- Table -->

                                  <table class="table mb-0 text-nowrap">
                                      <!-- Table Head -->
                                      <thead class="table-light">
                                         <tr>
                                            <th class="border-0">#</th>
                                            <th class="border-0">Image</th>
                                            <th class="border-0">Name</th>
                                            <th class="border-0">Order</th>
                                            <th class="border-0">Date</th>
                                            <th class="border-0">Items</th>
                                            <th class="border-0">Status</th>
                                            <th class="border-0">Amount</th>
                                            <th class="border-0">Update</th>
                                            <th class="border-0">Delete</th>
                                            <th class="border-0"></th>
                                         </tr>
                                      </thead>
                                      <tbody>
                                         <!-- Table body -->
                                           @foreach (Product product in Model.Products)
                                            {
                                            count++;
                                                <tr>
                                                    <td class="align-middle border-top-0">
                                                        @count
                                                    </td>
                                                    <td class="align-middle border-top-0 w-0">
                                                        @if (product.ProductImages.FirstOrDefault(x => x.IsPoster == true)?.Image!=null)
                                                        {
                                                            <a href="#"> <img src="~/uploads/products/@product.ProductImages.FirstOrDefault(x=>x.IsPoster==true)?.Image" alt="Ecommerce" class="icon-shape icon-xl"></a>
                                                        }
                                                        else
                                                        {
                                                            <a href="#"> <img src="~/assets/images/logo/FreshCartLogo.png" alt="Ecommerce" class="icon-shape icon-xl"></a>
                                                        }
                                                    </td>
                                                    <td class="align-middle border-top-0">
                                                        <a href="#" class="fw-semi-bold text-inherit">
                                                            <h6 class="mb-0">@product.Name</h6>
                                                        </a>
                                                        <span><small class="text-muted"></small></span>
                                                    </td>
                                                    <td class="align-middle border-top-0">
                                                        <a href="#" class="text-inherit">#14899</a>
                                                    </td>
                                                    <td class="align-middle border-top-0">
                                                        @(DateTime.Parse($"{product.CreatedTime}").ToString("MM/dd/yyyy HH:mm"))
                                                    </td>
                                                    <td class="align-middle border-top-0">
                                                        1
                                                    </td>
                                                    <td class="align-middle border-top-0">
                                                        <span class="badge bg-warning">Processing</span>
                                                    </td>
                                                    <td class="align-middle border-top-0">
                                                        $15.00
                                                    </td>
                                                    <td class="text-muted align-middle border-top-0">
                                                        <a class="btn btn-info" asp-controller="product" asp-action="update" asp-route-id="@product.Id">update</a>
                                                    </td>
                                                    <td class="text-muted align-middle border-top-0">
                                                        <a class="btn btn-danger" asp-controller="product" asp-action="delete" asp-route-id="@product.Id">delete</a>
                                                    </td>
                                                    <td class="text-muted align-middle border-top-0">
                                                        <a href="#" class="text-inherit" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="View"><i class="feather-icon icon-eye"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                   </table>
                                </div>
                             </div>
                          </div>
                         </div>
                          <!--========================PRODUCT TABLE END================================-->
                </div>
            </div>
        </div>
    </section>
</main>
