@model AccountDetailsViewModel
@{
    var localizer = ViewData["Localizer"] as IStringLocalizer;
    var user = ViewData["User"] as AppUser;
}
<main>
    <!-- section -->
    <section>
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center d-md-none py-4">
                        <!-- heading -->
                        <h3 class="fs-5 mb-0">Account Setting</h3>
                        <!-- button -->
                        <button class="btn btn-outline-gray-400 text-muted d-md-none btn-icon btn-sm ms-3 " type="button"
                                data-bs-toggle="offcanvas" data-bs-target="#offcanvasAccount" aria-controls="offcanvasAccount">
                            <i class="bi bi-text-indent-left fs-3"></i>
                        </button>
                    </div>
                </div>
                <!-- col -->
                <div class="col-lg-3 col-md-4 col-12 border-end  d-none d-md-block">
                    <div class="pt-10 pe-lg-10">
                        <!-- nav item -->
                        <ul class="nav flex-column nav-pills nav-pills-dark">
                            <li class="nav-item">
                                <a class="nav-link " aria-current="page" asp-controller="user" asp-action="orders" asp-route-Id="@user.Id" asp-route-page="1">
                                    <i class="feather-icon icon-shopping-bag me-2"></i>
                                    @localizer["User_YourOrders"]
                                </a>
                            </li>
                            <!-- nav item -->
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="user" asp-action="update" asp-route-Id="@user.Id">
                                    <i class="feather-icon icon-settings me-2"></i>@localizer["User_Account_Details"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="user" asp-action="changepassword" asp-route-Id="@user.Id">
                                    <i class="feather-icon icon-settings me-2"></i>
                                    @localizer["User_ChangePassword"]
                                </a>
                            </li>
                            <!-- nav item -->
                            <li class="nav-item">
                                <hr>
                            </li>
                            <!-- nav item -->
                            <li class="nav-item">
                                <a class="nav-link " asp-controller="account" asp-action="logout"><i class="feather-icon icon-log-out me-2"></i>@localizer["Accout_LogOut"]</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8 col-12">
                    <div class="py-6 p-md-6 p-lg-10">
                        <div>
                            <!-- heading -->
                            <h5 class="mb-4">
                                @localizer["User_Account_Details"]
                            </h5>
                            <div class="row">
                                <div class="col-lg-5">
                                    <!-- form -->
                                    <form method="post" asp-action="update">
                                        <!-- input -->
                                        <div class="mb-3">
                                            <label class="form-label">Email : @user.Email</label>
                                        </div>
                                        <!-- input -->
                                        <div class="mb-3">
                                            <label asp-for="Fullname" class="form-label">@localizer["Account_Fullname"]</label>
                                            <input asp-for="Fullname" class="form-control" value="@user?.FullName" placeholder="@localizer["Account_Fullname"]">
                                            <span class="text-danger" asp-validation-for="Fullname"></span>
                                        </div>
                                        <!-- input -->
                                        <div class="mb-5">
                                            <label asp-for="PhoneNumber" class="form-label">@localizer["Account_Phonenumber"]</label>
                                            <input asp-for="PhoneNumber" class="form-control" value="@user?.PhoneNumber" placeholder="@localizer["Account_Phonenumber"]">
                                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                        </div>
                                        <!-- button -->
                                        <div class="mb-3">
                                            <button type="submit" class="btn btn-primary">@localizer["User_Save"]</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>