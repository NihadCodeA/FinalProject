                            </li>
                            <!-- nav item -->
                            <li class="nav-item">
                                <a href="#!" class="nav-link">Floral</a>
                            </li>
                            <!-- nav item -->
                            <li class="nav-item">
                                <a href="#!" class="nav-link">Party & Gift Supplies</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-12 col-lg-9 col-md-8">
                   <form>
                       <label asp-for="@Model.StoreName">Store name</label>
                       <input asp-for="@Model.StoreName"/>

                       <button class="btn btn-primary" type="submit">Submit</button>
                   </form>
                </div>
            </div>
        </div>
    </section>
