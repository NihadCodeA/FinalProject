                    <ul class="nav flex-column nav-pills nav-pills-dark">
                        <!-- nav item -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="store" asp-action="index" asp-route-storeId="@Model.Id"><i class="feather-icon icon-shopping-bag me-2"></i>Shop</a>
                        </li>
                        <!-- nav item -->
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="feather-icon icon-gift me-2"></i>Deals</a>
                        </li>
                        <!-- nav item -->
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="feather-icon icon-map-pin me-2"></i>Buy It Again</a>
                        </li>
                        <!-- nav item -->
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="feather-icon icon-star me-2"></i>Reviews</a>
                        </li>
                        <!-- nav item -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Store") && User.Identity.Name == Model.Email)
                            {
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="product" asp-action="addproduct"><i class="feather-icon icon-plus me-2"></i>Add product</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="product" asp-action="index"><i class="feather-icon icon-list me-2"></i>Products list</a>
                                                </li>
                            }
                        }
                        <!-- nav item -->
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="store" asp-action="info" asp-route-storeId="@Model.Id"><i class="bi bi-info-circle me-2"></i>Info</a>
                        </li>
                        <!-- nav item -->
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="feather-icon icon-clipboard me-2"></i>Policy</a>
                        </li>
                    </ul>
                    <hr />
                    <div>
                        <ul class="nav flex-column nav-links">
                            <!-- nav item -->
                            <li class="nav-item">
                                <a href="#!" class="nav-link">Produce</a>
                            </li>
                            <!-- nav item -->
