<script>
    let descriptionCount = document.getElementsByClassName("descriptionCount")[0];
    let descriptionText = document.getElementsByClassName("descriptionText")[0];
    
    descriptionText.addEventListener("keyup", () => {
        if (1000 - descriptionText.value.length <= 1000 && 1000 - descriptionText.value.length > 0) {
            descriptionCount.textContent = 1000 - descriptionText.value.length + " characters remaining.";
        }
        else {
            descriptionCount.textContent = "0 characters remaining."
        }
    })

    let deleteBtn = document.querySelector(".deleteBtn");

    deleteBtn.addEventListener("click", function () {
        deleteBtn.parentElement.remove();
    })
</script>