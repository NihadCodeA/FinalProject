@model Store

<!-- section-->
<main>
    <div class="mt-4">
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-12">
                    <!-- breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="me-2"><a asp-controller="home" asp-action="index">Home </a></li>
                            <li class="me-2"><i class="bi bi-chevron-right"></i></li>
                            <li class="me-2"><a asp-controller="store" asp-action="storelist">Stores</a></li>
                            <li class="me-2"><i class="bi bi-chevron-right"></i></li>
                            <li class="active" aria-current="page">
                                @Model.StoreName
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- section -->
    <section class="mb-lg-14 mb-8 mt-8">
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-12 col-lg-3 col-md-4 mb-4 mb-md-0">
                    <div class="d-flex flex-column">
                        <div>
                            <!-- img -->
                            @if (Model.LogoImage==null)
                            {
                                        <img src="~/assets/images/stores-logo/stores-logo-2.svg"
                                 alt=""
                                 class="rounded-circle icon-shape icon-xxl" />
                            }
                            else
                            {
                                     <img src="~/uploads/stores/@Model.LogoImage"
                                 alt=""
                                 class="rounded-circle icon-shape icon-xxl" />

                            }
                        </div>
                        <!-- heading -->
                        <div class="mt-4">
                            <h1 class="mb-1 h4">@Model.StoreName</h1>
                            <div class="small text-muted">
                                <span>Everyday store prices </span>
                            </div>
                            <div>
                                <span>
                                    <small><a href="#!">100% satisfaction guarantee</a></small>
                                </span>
                            </div>
                            <!-- rating -->
                            <div class="mt-2">
                                <!-- rating -->
                                <small class="text-warning">
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-half"></i>
                                </small><span class="ms-2">5.0</span>
                                <!-- text --><span class="text-muted ms-1">(3,400 reviews)</span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <!-- nav -->
                    <ul class="nav flex-column nav-pills nav-pills-dark">
                        <!-- nav item -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="store" asp-action="index" asp-route-storeId="@Model.Id"><i class="feather-icon icon-shopping-bag me-2"></i>Shop</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Store") && User.Identity.Name == Model.Email)
                            {
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="product" asp-action="addproduct"><i class="feather-icon icon-plus me-2"></i>Add product</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="product" asp-action="index"><i class="feather-icon icon-list me-2"></i>Products list</a>
                                                </li>
                            }
                        }
                        <!-- nav item -->
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="store" asp-action="info" asp-route-id="@Model.Id"><i class="bi bi-info-circle me-2"></i>Info</a>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-lg-9 col-md-8">
                    <form method="post" asp-action="UpdateInfo" enctype="multipart/form-data">
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="StoreName">StoreName <sup class="text-danger">*</sup></label>
                                <input asp-for="StoreName" class="form-control" placeholder="StoreName">
                                <span class="text-danger" asp-validation-for="StoreName"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Address">Address <sup class="text-danger">*</sup></label>
                                <input asp-for="Address" class="form-control" placeholder="Address">
                                <span class="text-danger" asp-validation-for="Address"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="PhoneNumber1">PhoneNumber1 <sup class="text-danger">*</sup></label>
                                <input asp-for="PhoneNumber1" class="form-control" placeholder="PhoneNumber1">
                                <span class="text-danger" asp-validation-for="PhoneNumber1"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="PhoneNumber2">PhoneNumber2 </label>
                                <input asp-for="PhoneNumber2" class="form-control" placeholder="PhoneNumber2">
                                <span class="text-danger" asp-validation-for="PhoneNumber2"></span>
                            </div> 
                            <div class="col-12 col-md-6">
                                <label asp-for="PhoneNumber3">PhoneNumber3 </label>
                                <input asp-for="PhoneNumber3" class="form-control" placeholder="PhoneNumber3">
                                <span class="text-danger" asp-validation-for="PhoneNumber3"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="PhoneNumber4">PhoneNumber4 </label>
                                <input asp-for="PhoneNumber4" class="form-control" placeholder="PhoneNumber4">
                                <span class="text-danger" asp-validation-for="PhoneNumber4"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="LogoImageFile">Update logo image </label>
                                <input asp-for="LogoImageFile" class="form-control" placeholder="LogoImageFile">
                                <span class="text-danger" asp-validation-for="LogoImageFile"></span>
                                @if (Model.LogoImage != null)
                                {
                                    <div style="margin-left:40px;margin-top:16px;position:relative">
                                        <img style="max-width:150px;max-height:140px;" src="~/uploads/stores/@Model.LogoImage"  />
                                        <span class="deleteBtn" style="cursor:pointer;font-weight:bold;font-size:24px;color:red;position:absolute">X</span>
                                        <input hidden name="LogoImageId" value="@Model.Id" />
                                    </div>
                                }
                            </div>
                            <div class="col-12">
                                <label asp-for="Description">Description (<span class="descriptionCount">1000 characters remaining.</span>)</label>
                                <textarea style="min-height:100px;" asp-for="Description" class="form-control descriptionText" placeholder="Description"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                        </div>
                        <div class="col-12 d-grid mt-2">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                   </form>
                </div>
            </div>
        </div>
    </section>
</main>
