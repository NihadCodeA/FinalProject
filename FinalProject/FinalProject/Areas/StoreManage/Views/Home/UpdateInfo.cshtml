@model Store
@{
    var localizer = ViewData["Localizer"] as IStringLocalizer;
}
<!-- section-->
<main class="main-content-wrapper">
    <!-- section -->
    <section class="mb-lg-14 mb-8 mt-8">
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-12">
                    <form method="post" asp-action="UpdateInfo" enctype="multipart/form-data">
                        <div class="row g-3">
                            <div class="col-12 col-lg-6">
                                <label asp-for="StoreName">@localizer["Account_Storename"] <sup class="text-danger">*</sup></label>
                                <input asp-for="StoreName" class="form-control" placeholder="@localizer["Account_Storename"]">
                                <span class="text-danger" asp-validation-for="StoreName"></span>
                            </div>
                            <div class="col-12 col-lg-6">
                                <label asp-for="Address">@localizer["Account_Address"] <sup class="text-danger">*</sup></label>
                                <input asp-for="Address" class="form-control" placeholder="@localizer["Account_Address"]">
                                <span class="text-danger" asp-validation-for="Address"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="PhoneNumber1">@localizer["Account_Phonenumber"] - 1 <sup class="text-danger">*</sup></label>
                                <input asp-for="PhoneNumber1" class="form-control" placeholder="@localizer["Account_Phonenumber"] - 1">
                                <span class="text-danger" asp-validation-for="PhoneNumber1"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="PhoneNumber2">@localizer["Account_Phonenumber"] - 2 </label>
                                <input asp-for="PhoneNumber2" class="form-control" placeholder="@localizer["Account_Phonenumber"] - 2">
                                <span class="text-danger" asp-validation-for="PhoneNumber2"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="PhoneNumber3">@localizer["Account_Phonenumber"] - 3 </label>
                                <input asp-for="PhoneNumber3" class="form-control" placeholder="@localizer["Account_Phonenumber"] - 3">
                                <span class="text-danger" asp-validation-for="PhoneNumber3"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="PhoneNumber4">@localizer["Account_Phonenumber"] - 4  </label>
                                <input asp-for="PhoneNumber4" class="form-control" placeholder="@localizer["Account_Phonenumber"] - 4">
                                <span class="text-danger" asp-validation-for="PhoneNumber4"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="LogoImageFile">@localizer["Upload_Image"] </label>
                                <input asp-for="LogoImageFile" class="form-control" placeholder="LogoImageFile">
                                <span class="text-danger" asp-validation-for="LogoImageFile"></span>
                                @if (Model.LogoImage != null)
                                {
                                    <div style="margin-left:40px;margin-top:16px;position:relative">
                                        <img style="max-width:150px;max-height:140px;" src="~/uploads/stores/@Model.LogoImage" />
                                        <span class="deleteBtn" style="cursor:pointer;font-weight:bold;font-size:24px;color:red;position:absolute">X</span>
                                        <input hidden name="LogoImageId" value="@Model.Id" />
                                    </div>
                                }
                            </div>
                            <div class="col-12">
                                <label asp-for="Description">@localizer["Description"] (<span class="descriptionCount">1000 </span>)</label>
                                <textarea style="min-height:100px;" asp-for="Description" class="form-control descriptionText" placeholder="@localizer["Description"]"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                        </div>
                        <div class="col-12 d-grid mt-2">
                            <button type="submit" class="btn btn-primary">@localizer["User_Save"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>
