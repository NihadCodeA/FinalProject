@model Category

<main class="main-content-wrapper">
    <div class="container">
        <div class="row mb-8">
            <div class="col-12 col-lg-8 mx-auto">
                <!-- page header -->
                <div class="d-md-flex justify-content-between align-items-center">
                    <div>
                        <h2>Kateqoriya əlavə et</h2>
                    </div>
                    <div>
                        <a asp-area="manage" asp-controller="admin" asp-action="categories" class="btn btn-light">Geri qayıt</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row ">
            <div class="col-lg-8 col-12 mb-5 mx-auto">
                <form method="post" asp-action="createcategory" enctype="multipart/form-data">
                    <div class="row g-3">
                        <!-- col -->
                        <div class="col-12 col-md-6">
                            <label asp-for="NameAz">Kateqoriya adı (az)</label>
                            <input asp-for="NameAz" class="form-control" placeholder="Kateqoriya adı (en)">
                            <span class="text-danger" asp-validation-for="NameAz"></span>
                        </div>
                        <div class="col-12 col-md-6">
                            <label asp-for="NameEn">Kateqoriya adı (en)</label>
                            <input asp-for="NameEn" class="form-control" placeholder="Kateqoriya adı (en)">
                            <span class="text-danger" asp-validation-for="NameEn"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="ImageFile">Kateqoriya şəkli</label>
                            <input asp-for="ImageFile" class="form-control">
                            <span class="text-danger" asp-validation-for="ImageFile"></span>
                        </div>
                        <!-- btn -->
                        <div class="col-12 d-grid">
                            <button type="submit" class="btn btn-primary">Əlavə et</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>